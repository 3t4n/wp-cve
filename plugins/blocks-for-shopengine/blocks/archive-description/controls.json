        "label": "Description"
    },
    "shopengine_archive_description_align": {
        "control": {
            "field": "SelectControl",
            "props": {
                "label": "Alignment",
                "options": [{
                        "value": "left",
                        "label": "Left"
                    },
                    {
                        "value": "center",
                        "label": "Center"
                    },
                    {
                        "value": "right",
                        "label": "Right"
                    }
                ]
            }
        },
        "responsive": true,
        "type": "object",
        "default": {
            "desktop": ""
        }
    },
    "shopengine_archive_description_color": {
        "control": {
            "field": "ColorPalette",
            "label": "Color",
            "props": {
                "colors": [{
                        "name": "#000",
