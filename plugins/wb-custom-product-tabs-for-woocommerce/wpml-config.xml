<wpml-config>
    <custom-types>
        <custom-type translate="0">wb-custom-tabs</custom-type>
    </custom-types>
    <custom-fields-texts>
        <key name="wb_custom_tabs">
            <key name="*">
                <key name="title" action="copy-once" style="line" label="Title" />
                <key name="content" action="copy-once" style="visual" label="Description" />
                <key name="tab_type" action="copy"/>
                <key name="position" action="copy"/>
                <key name="nickname" action="copy"/>
            </key>  
        </key>
    </custom-fields-texts>      
</wpml-config>