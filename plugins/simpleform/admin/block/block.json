{
	"apiVersion": "2",
	"name": "simpleform/form-selector",
	"title": "SimpleForm",
	"category": "widgets",
	"description": "Display a contact form",
    "keywords": [ "assistance", "contact", "email", "enquiry", "feedback", "form", "help", "information", "mail", "message", "request", "support" ],
	"textdomain": "simpleform",
    "attributes": {
        "preview": {
            "type": "boolean",
            "default": false
        },
        "formId": {
	        "type": "string",
	        "default": ""
	    },
	    "optionNew": {
	        "type": "string",
	        "default": "visible"
	    },
	    "formOptions": {
	        "type": "string",
	        "default": "d-none"
	    },
        "displayTitle": {
            "type": "boolean",
            "default": false
        },
	    "titleOptions": {
	        "type": "string",
	        "default": "d-none"
	    },
	    "titleHeading": {
	        "type": "string",
	        "default": "h4"
	    },
	    "titleAlignment": {
	        "type": "string",
	        "default": "left"
	    },
        "formDescription": {
            "type": "boolean",
            "default": false
        },
        "formEnding": {
            "type": "boolean",
            "default": false
        },
        "bgColor": { 
	        "type": "string", 
	        "default": "transparent" 
	    },
 	    "borderRadius": {
	        "type": "integer",
	        "default": 0
	    },
        "labelColor": { 
	        "type": "string", 
	        "default": "#000" 
	    },
        "fieldsBorderColor": { 
	        "type": "string", 
	        "default": "#CCC" 
	    },
        "checkedColor": { 
	        "type": "string", 
	        "default": "#8BC34A" 
	    },
        "buttonColor": { 
	        "type": "string", 
	        "default": "#007BFF" 
	    },
        "hoverButtonColor": { 
	        "type": "string", 
	        "default": "transparent" 
	    },
        "buttonBorderColor": { 
	        "type": "string", 
	        "default": "#007BFF" 
	    },
        "hoverButtonBorderColor": { 
	        "type": "string", 
	        "default": "#007BFF" 
	    },
        "buttonTextColor": { 
	        "type": "string", 
	        "default": "#FFF" 
	    },
        "hoverButtonTextColor": { 
	        "type": "string", 
	        "default": "#007BFF" 
	    },
	    "topMargin": {
	        "type": "integer",
	        "default": 0
	    },
 	    "rightMargin": {
	        "type": "integer",
	        "default": 0
	    },
	    "bottomMargin": {
	        "type": "integer",
	        "default": 0
	    },
	    "leftMargin": {
	        "type": "integer",
	        "default": 0
	    },
	    "topPadding": {
	        "type": "integer",
	        "default": 0
	    },
	    "rightPadding": {
	        "type": "integer",
	        "default": 0
	    },
	    "bottomPadding": {
	        "type": "integer",
	        "default": 0
	    },
	    "leftPadding": {
	        "type": "integer",
	        "default": 0
	    },
        "formAnchor": {
            "type": "string",
            "default": ""
        },
        "className": {
            "type": "string",
            "default": ""
        },
        "formWidget": {
            "type": "boolean",
            "default": false
        }
    },
    "supports": {
        "customClassName": false
    },
    "example": {
		"attributes": {
		    "preview": true
        }
	},
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css"
}