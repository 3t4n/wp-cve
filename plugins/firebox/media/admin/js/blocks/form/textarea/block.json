{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "firebox/textarea",
  "version": "1.0.0",
  "title": "Textarea Field",
  "description": "Add a textarea field into your form.",
  "category": "firebox",
  "parent": [
    "firebox/form",
    "firebox/column",
    "firebox/row",
    "core/group"
  ],
  "keywords": [
    "text",
    "textarea",
    "textarea field"
  ],
  "attributes": {
    "uniqueId": {
      "type": "string",
      "default": ""
    },
    "fieldLabelRequiredFieldIndication": {
      "type": "boolean",
      "default": true
    },
    "fieldName": {
      "type": "string",
      "default": "textarea"
    },
    "fieldLabel": {
      "type": "string",
      "default": "Textarea Field"
    },
    "helpText": {
      "type": "string",
      "default": ""
    },
    "required": {
      "type": "boolean",
      "default": true
    },
    "width": {
      "type": "string",
      "default": "100%"
    },
    "defaultValue": {
      "type": "string",
      "default": ""
    },
    "placeholder": {
      "type": "string",
      "default": ""
    },
    "cssClass": {
      "type": "string",
      "default": ""
    },
    "inputCssClass": {
      "type": "string",
      "default": ""
    },
    "hideLabel": {
      "type": "boolean",
      "default": false
    },
    "disableBrowserAutocomplete": {
      "type": "boolean",
      "default": false
    },
    "rows": {
      "type": "number",
      "default": 3
    }
  },
  "editorScript": [
    "firebox-store",
    "file:./index.js"
  ]
}