	<author>E4J srl</author>
	<creationDate>October 2020</creationDate>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>tech@extensionsforjoomla.com</authorEmail>
	<authorUrl>https://extensionsforjoomla.com</authorUrl>
	<version>1.7</version>
	<description>MOD_VIKRENTITEMS_SUMMARY_DESC</description>
 
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="showgotosumm" type="list" default="1" label="VIEW_SUMMARY_BTN" description="VIEW_SUMMARY_BTN_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field name="showdates" type="list" default="0" label="SHOW_DATES" description="SHOW_DATES_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="layout"
					type="modulelayout"
					label="JLAYOUT"
					description="JLAYOUT_DESC"
				/>

				<field
					name="itemid"
					type="menuitem"
					prefix="vikrentitems"
					default=""
					required="true"
					label="JMENUITEM"
					description="JMENUITEM_DESC"
				/>

			</fieldset>
		</fields>
	</config>

</extension>