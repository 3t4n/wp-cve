          "buttons": {
            "number": 0,
            "buttons": []
          },
          "link": {
            "type": "none",
            "value": []
          },
          "image": {},
          "productSlide": {},
          "style": {
            "position": "",
            "alignment": "",
            "outerPadding": "",
            "innerPadding": "",
            "bgOverlayColor": "",
            "bgOverlayOpacity": "",
            "txtBgColor": "",
            "txtBgOpacity": "",
            "titleSize": "",
            "titleColor": "",
            "descSize": "",
            "descColor": "",
            "textBoxFull": false
          }
        },
        {
          "id": "slide-two",
          "title": "Lorem ipsum",
          "subtitle": "Cras sollicitudin cursus faucibus. Integer mauris lorem, placerat quis aliquam a, ultrices eu velit.",
          "buttons": {
            "number": 0,
            "buttons": []
          },
          "link": {
            "type": "none",
            "value": []
          },
          "image": {},
          "productSlide": {},
          "style": {
            "position": "",
            "alignment": "",
            "outerPadding": "",
            "innerPadding": "",
            "bgOverlayColor": "",
            "bgOverlayOpacity": "",
            "txtBgColor": "",
            "txtBgOpacity": "",
            "titleSize": "",
            "titleColor": "",
            "descSize": "",
            "descColor": "",
            "textBoxFull": false
          }
        }
      ]
    },
    "position": {
      "type": "string",
      "default": "centercenter"
    },
    "outerPadding": {
      "type": "number",
      "default": 50
    },
    "innerPadding": {
      "type": "number",
      "default": 15
    },
    "showTitle": {
      "type": "boolean",
      "default": true
    },
    "defaultTitleSize": {
      "type": "number",
      "default": 26
    },
    "defaultTitleColor": {
      "type": "string",
      "default": "#FFF"
    },
    "showDesc": {
      "type": "boolean",
      "default": true
    },
    "defaultDescSize": {
      "type": "number",
      "default": 15
    },
    "defaultDescColor": {
      "type": "string",
      "default": "#e5e5e5"
    },
    "imageProportion": {
      "type": "string",
      "default": "actual"
    },
    "forceFullWidth": {
      "type": "boolean",
      "default": false
    },
    "infoBg": {
      "type": "boolean",
      "default": true
    },
    "infoBgColor": {
      "type": "string",
      "default": "#000"
    },
    "infoBgOpacity": {
      "type": "number",
      "default": 0.62
    },
    "imageOverlay": {
      "type": "boolean",
      "default": false
    },
    "imageOverlayColor": {
      "type": "string",
      "default": "#000"
    },
    "imageOverlayOpacity": {
      "type": "number",
      "default": 0.62
    },
    "transition": {
      "type": "string",
      "default": "slide"
    },
    "perView": {
      "type": "number",
      "default": 1
    },
    "mode": {
      "type": "string",
      "default": "default"
    },
    "spaceBetween": {
      "type": "number",
      "default": 0
    },
    "navigation": {
      "type": "boolean",
      "default": true
    },
    "navigationStyle": {
      "type": "string",
      "default": "default"
    },
    "navigationColor": {
      "type": "string",
      "default": "dark"
    },
    "navigationArrow": {
      "type": "string",
      "default": "ban"
    },
    "pagination": {
      "type": "boolean",
      "default": true
    },
    "paginationStyle": {
      "type": "string",
      "default": "bullets"
    },
    "paginationColor": {
      "type": "string",
      "default": "dark"
    },
    "showOnHover": {
      "type": "boolean",
      "default": false
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "viewScript": "blockons-slider",
  "style": [
    "file:./style-index.css",
    "blockons-fontawesome",
    "blockons-swiper-css"
  ]
}