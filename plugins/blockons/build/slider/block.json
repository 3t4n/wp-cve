  "keywords": [
    "woocommerce",
    "product",
    "slider",
    "advanced",
    "blockons"
  ],
  "attributes": {
    "uniqueId": {
      "type": "string"
    },
    "alignment": {
      "type": "string",
      "default": "center"
    },
    "sliderSlides": {
      "type": "array",
