{
  "$schema": "https://json.schemastore.org/block.json",
  "apiVersion": 2,
  "name": "blockons/content-toggler",
  "title": "Content Toggler",
  "textdomain": "blockons",
  "icon": "menu",
  "category": "blockons-category",
  "keywords": [
    "content",
    "toggler",
    "layout",
    "blockons"
  ],
  "supports": {
    "html": false,
    "nested": true
  },
  "attributes": {
    "btnStyle": {
      "type": "string",
      "default": "one"
    },
    "toggleTextClosed": {
      "type": "string",
      "default": "Show more +"
    },
    "toggleTextOpen": {
      "type": "string",
      "default": "Show less -"
    },
    "closedHeight": {
      "type": "number",
      "default": 80
    },
    "gradHeight": {
      "type": "number",
      "default": 60
    },
    "toggleWithin": {
      "type": "boolean",
      "default": false
    },
    "toggleBgColor": {
      "type": "string",
      "default": "#8B8B8B"
    },
    "toggleTextSize": {
      "type": "number",
      "default": 16
    },
    "toggleTextColor": {
      "type": "string",
      "default": "#000"
    },
    "toggleGradColor": {
      "type": "string",
      "default": "#FFF"
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "viewScript": "file:./toggle.js",
  "style": [
    "file:./style-index.css"
  ]
}