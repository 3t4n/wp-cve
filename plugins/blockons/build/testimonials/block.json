{
  "$schema": "https://json.schemastore.org/block.json",
  "apiVersion": 2,
  "name": "blockons/testimonials",
  "title": "Testimonials",
  "textdomain": "blockons",
  "icon": "format-quote",
  "category": "blockons-category",
  "keywords": [
    "testimonials",
    "quote",
    "reviews",
    "comments",
    "slider",
    "blockons"
  ],
  "attributes": {
    "uniqueId": {
      "type": "string"
    },
    "alignment": {
      "type": "string",
      "default": "left"
    },
    "sliderSlides": {
      "type": "array",
      "default": [
