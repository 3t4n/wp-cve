.bc-order-list,
.bc-order-list__item {
	list-style: none;
	margin: 0;
}

.bc-order-list {
	list-style: none;
	padding-bottom: 40px;

	&.bc-load-items-container--has-pages {
		list-style: none;
	}
}

.bc-order-list__item {
	border-bottom: 1px solid var(--color-bc-light-grey);
	padding: 32px 0;

	@media (--viewport-medium) {
		padding: 50px 0;
	}

	&:first-child {
		border-top: 1px solid var(--color-bc-light-grey);
	}
}

.bc-order-card__body {
	margin-top: 40px;
}
