.bc-subnav__list {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	list-style: none;
	margin: 0;
	padding: 0;

	@media (--viewport-small) {
		flex-direction: row;
	}
}

.bc-subnav__list-item {
	margin-bottom: 20px;
	padding: 0;

	@media (--viewport-small) {

		+ .bc-subnav__list-item {
			margin-left: 30px;
		}
	}

	@media (--viewport-medium) {
		margin-bottom: 40px;
	}
}

.bc-subnav__link {
	cursor: pointer;
	margin: 0;
	padding: 0;
	text-decoration: none;
}

.bc-subnav__list-item--current .bc-subnav__link {
	color: currentColor;
}
