<wpml-config>
  <custom-types>
    <custom-type translate="1">blossom-recipe</custom-type>
  </custom-types>
  <taxonomies>
    <taxonomy translate="1">recipe-category</taxonomy>
    <taxonomy translate="1">recipe-cuisine</taxonomy>
    <taxonomy translate="1">recipe-cooking-method</taxonomy>
    <taxonomy translate="1">recipe-tag</taxonomy>
  </taxonomies>
  <custom-fields>
    <custom-field action="translate">br_recipe</custom-field>
    <custom-field action="translate">br_recipe_gallery</custom-field>
  </custom-fields>
  <admin-texts>
    <key name="_blossom_recipe_maker">
      <key name="demo"/>
    </key>
    <key name="br_recipe_settings">
      <key name="adjust_servings"/>
      <key name="feat_image"/>
      <key name="act_as_posts"/>
      <key name="print_btn_txt"/>
      <key name="no_of_recipes"/>
      <key name="pages">
        <key name="recipe_search"/>
      </key>
      <key name="recipe_search">
        <key name="category"/>
        <key name="cuisine"/>
        <key name="cooking_method"/>
        <key name="tag"/>
      </key>
    </key>
  </admin-texts>
  <shortcodes>
    <shortcode>
      <tag>recipe-maker</tag>
      <attributes>
        <attribute>id</attribute>
      </attributes>
    </shortcode>
    <shortcode>
      <tag>BLOSSOM_RECIPE_MAKER_SEARCH_RESULTS</tag>
    </shortcode>
    <shortcode>
      <tag>Blossom_Recipe_Maker_Search</tag>
    </shortcode>
  </shortcodes>
</wpml-config>