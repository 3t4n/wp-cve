{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "collapsing/categories",
  "version": "0.1.0",
  "title": "Collapsing Categories",
  "category": "text",
  "icon": "flag",
  "description": "A Gutenberg block to show a collapsible list of your categories",
  "attributes": {
		"blockId": { "type": "string"},
    "widgetTitle": {"type":"string", "default": "Categories"},
    "titleLink": {"type":"string", "default": ""},
    "showPostCount": { "type": "boolean", "default": false},
    "showPostDate": { "type": "boolean", "default": false},
    "catFeed": {"type": "string", "default": "none"},
    "inExclude": {"type":"string", "default": "exclude"},
    "inExcludeCats": {"type":"string", "default": ""},
    "showPosts": {"type":"boolean", "default": true}, 
    "linkToCat": {"type":"boolean", "default": true},
    "olderThan": {"type":"string", "default": 0},
    "excludeAll": {"type":"string", "default": "0"},
    "catSortOrder": {"type":"string", "default": "ASC"},
    "catSort": {"type":"string", "default": "catName"},
    "postSortOrder": {"type":"string", "default": "ASC"},
    "postSort": {"type":"string", "default": "postTitle"},
    "expand": {"type":"string", "default": "0"},
    "customExpand": {"type":"string", "default": "⬇️"},
    "customCollapse": {"type":"string", "default": "⬆️"},
    "defaultExpand": {"type":"string", "default": ""},
    "postTitleLength": {"type":"string", "default": 0},
    "accordion": {"type":"boolean", "default": false},
    "catfeed": {"type":"string", "default": "none"},
    "taxonomy": {"type":"string", "default": "category"},
    "post_type": {"type":"string", "default": "post"},
    "postDateAppend": {"type":"string", "default": "after"},
    "postDateFormat": {"type":"string", "default": "m/d"},
    "useCookies": {"type":"boolean", "default": true},
    "showTopLevel": {"type":"boolean", "default": true},
    "postsBeforeCats": {"type":"boolean", "default": false},
    "expandCatPost": {"type":"boolean", "default": true},
    "style": {"type":"string", "default": "theme"},
    "debug": {"type":"boolean", "default":false}
  },
  "supports": {
    "html": false
  },
  "textdomain": "collapsing-categories",
  "editorScript": "file:index.js",
  "editorStyle": "file:index.css",
  "style": "file:style-index.css"
}
