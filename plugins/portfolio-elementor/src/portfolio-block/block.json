{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "powerfolio/portfolio-block",
	"version": "0.1.0",
	"title": "Powerfolio: Portfolio Block",
	"category": "widgets",
	"icon": "gallery",
	"description": "Create a portfolio grid with the customization options from the Powerfolio plugin. It will display your posts from the portfolio post type.",
	"supports": {
		"html": false
	},
	"textdomain": "powerfolio",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"attributes": {
        "hover": {
            "type": "string",
            "default": "hover1"
        }, 
		"columns": {
            "type": "string",
            "default": "3"
        },
		"postsperpage": {
            "type": "number",
            "default": 12
        },
		"type": {
            "type": "boolean",
            "default": false
        },
		"showfilter": {
            "type": "boolean",
            "default": true
        },
        "showallbtn": {
            "type": "boolean",
            "default": true
        },
        "tax_text": {
            "type": "string",
            "default": "All"
        },
        "style": {
            "type": "string",
            "default": "box"
        },
        "margin": {
            "type": "boolean",
            "default": true
        },
        "linkto": {
            "type": "string",
            "default": "project"
        },
        "zoom_effect": {
            "type": "boolean",
            "default": false
        },
        "columns_mobile": {
            "type": "string",
            "default": "1"
        },
        "item_hide_title": {
            "type": "boolean",
            "default": false
        },
        "hide_item_category": {
            "type": "boolean",
            "default": false
        },
        "post_type": {
            "type": "string",
            "default": "elemenfolio"
        },
        "taxonomy": {
            "type": "array",
            "default": []
        },
        "bgColor": {
            "type": "string",
            "default": ""
        },
        "margin_size": {
            "type": "number",
            "default": 0
        },
        "box_height": {
            "type": "number",
            "default": 250
        },
        "text_transform": {
            "type": "string",
            "default": ""
        },
        "text_align": {
            "type": "string",
            "default": "center"
        },
        "borderRadius": {
            "type": "number",
            "default": 0
        },
        "border_size": {
            "type": "number",
            "default": 0
        },
        "item_bordercolor": {
            "type": "string",
            "default": ""
        },
        "filter_bgcolor": {
            "type": "string",
            "default": ""
        },
        "filter_bgcolor_active": {
            "type": "string",
            "default": ""
        },
        "filter_text_transform": {
            "type": "string",
            "default": ""
        },
        "filter_border_radius": {
            "type": "number",
            "default": 0
        }
    }
}
