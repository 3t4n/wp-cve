{
    "name": "wpdesk\/flexible-refunds-core",
    "description": "Flexible Refund Core",
    "license": "MIT",
    "keywords": [
        "custom price woocommerce"
    ],
    "homepage": "https:\/\/gitlab.com\/wpdesk\/library\/flexible-refunds-core",
    "prefer-stable": true,
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "piotr.potrebka",
            "email": "piotr.potrebka@wpdesk.net"
        }
    ],
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.3"
        },
        "allow-plugins": {
            "cweagans\/composer-patches": true,
            "kylekatarnls\/update-helper": true,
            "dealerdirect\/phpcodesniffer-composer-installer": true,
            "phpstan\/extension-installer": true
        }
    },
    "require": {
        "php": ">=7.3",
        "psr\/container": "^1",
        "psr\/log": "^1.1.3",
        "wpdesk\/wp-view": "^2",
        "wpdesk\/wp-notice": "^3.1",
        "wpdesk\/wp-forms": "^3.0",
        "wpdesk\/wp-persistence": "^3.0",
        "wpdesk\/wp-wpdesk-marketing": "^1"
    },
    "require-dev": {
        "10up\/wp_mock": "*",
        "mockery\/mockery": "*",
        "phpunit\/phpunit": "^6",
        "wp-cli\/wp-cli": "^2",
        "wp-cli\/wp-cli-bundle": "^2",
        "wpdesk\/phpstan-rules": "^1.1",
        "wpdesk\/wp-code-sniffer": "^1.2.3"
    },
    "autoload": {
        "psr-4": {
            "FRFreeVendor\\WPDesk\\Library\\FlexibleRefundsCore\\": "src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests\/unit",
            "tests\/integration"
        ]
    },
    "extra": {
        "text-domain": "flexible-refunds-core",
        "translations-folder": "lang",
        "po-files": {
            "pl_PL": "pl_PL.po"
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpunit-unit": "phpunit --configuration phpunit-unit.xml --coverage-text --colors=never",
        "phpunit-unit-fast": "phpunit --configuration phpunit-unit.xml --no-coverage",
        "phpunit-integration": "phpunit --configuration phpunit-integration.xml --coverage-text --colors=never",
        "phpunit-integration-fast": "phpunit --configuration phpunit-integration.xml --no-coverage",
        "generate-pot": "wp i18n make-pot . lang\/flexible-quantity-core.pot"
    }
}