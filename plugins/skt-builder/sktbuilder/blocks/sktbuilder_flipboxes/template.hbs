<div {{#if blockCustomID}}id="{{{blockCustomID}}}"{{else}}id="skt-builder-flip-boxes-block-{{id}}"{{/if}} class="{{#if blockCustomClass}}{{{blockCustomClass}}} {{/if}}skt-builder-block-wrapper skt-builder-flip-boxes-block skt-builder-flip-boxes-block-{{id}}" style="background-color: {{blockBackgroundColor}}; background-image: url({{blockBgImageUrl}}); padding-bottom: {{blockPaddingBottom}}px; padding-top: {{blockPaddingTop}}px; {{#if blockParallaxEffect}}background-attachment: fixed;{{/if}}">
	<div class="skt-builder-block-inner skt-builder-block-inner-{{id}}" style="{{#if blockAnimation}}visibility: hidden;{{/if}}">
		<div class="skt-builder-container">
			{{#if blockTitle}}
				<div class="skt-builder-block-title">
					<h2 style="color: {{blockTitleColor}}; text-align: {{blockTitleAlign}};">{{blockTitle}}</h2>
				</div>
			{{/if}}
			{{#if blockDescription}}
                <div class="skt-builder-block-description">{{{blockDescription}}}</div>
            {{/if}}
            <div class="skt-builder-columns-row skt-builder-columns-row-{{blockColumnsCount}}column">
			{{#if blockColumns.length}}
				{{#each_with_sort blockColumns "order"}}
                	<div class="skt-builder-column skt-builder-flipcard-column skt-builder-flipcard-column-{{id}}">
                        <div class="skt-builder-flipcard {{columnFlipType}}" style="height: {{blockColumnsHeight}}px;">
                            <div class="skt-builder-flipcard-front" style="background-color: {{columnBoxBgColor}}; height: {{blockColumnsHeight}}px;">
                                {{#if columnImage}}
                                    <div class="skt-builder-flipcard-icon"><img src="{{columnImage}}"></div>
                                {{else}}
                                    <div class="skt-builder-flipcard-icon" style="color: {{columnIconColor}};"><i class="{{columnIcon}}"></i></div>
                                {{/if}}
                                <h3 class="skt-builder-flipcard-title" style="color: {{titleColor}};">{{title}}</h3>
                                <span class="skt-builder-flipcard-title-separator" style="background-color: {{titleSeparatorColor}};"></span> 
                                <div class="skt-builder-flipcard-front-content" style="color: {{columnContentColor}};">{{{columnContent}}}</div>
                            </div>
                            <div class="skt-builder-flipcard-back" style="background-color: {{columnBackBoxBgColor}}; height: {{blockColumnsHeight}}px;">
                            	<h3 class="skt-builder-flipcard-title" style="color: {{columnBackTitleColor}};">{{columnBackTitle}}</h3>
                                <span class="skt-builder-flipcard-title-separator" style="background-color: {{columnBackTitleSeparatorColor}};"></span>
                              	<div class="skt-builder-flipcard-front-content" style="color: {{columnBackContentColor}};">{{{columnBackContent}}}</div>
                            </div>
                        </div>
                	</div>
				{{/each_with_sort}}
			{{/if}}
			</div>
		</div>
	</div>
</div>

