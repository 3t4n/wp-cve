<div {{#if blockCustomID}}id="{{{blockCustomID}}}"{{else}}id="sktbuilder-call-to-action-block-{{id}}"{{/if}} class="{{#if blockCustomClass}}{{{blockCustomClass}}} {{/if}}sktbuilder-block sktbuilder-call-to-action" style="background-image: url({{bgImageUrl}});">
        <div class="qb-container">
            <div class="sktbuilder-header">
            {{#if header}}
                <h2 class="sktbuilder-header__title sktbuilder-header__title_color_white">{{header}}</h2>
            {{/if}}
            {{#if description}}
                <div class="sktbuilder-header__description sktbuilder-header__description_color_white">
                   {{{description}}}
                </div>
            {{/if}}
            </div>
            {{#if actionText}}
                <div class="sktbuilder-button sktbuilder-button-call-to-action">
                    <a class="sktbuilder-button__button sktbuilder-button__button_{{actionHover}}" type="button" href="{{actionUrl}}">{{actionText}}</a>
                </div>
            {{/if}}
        </div>
</div>