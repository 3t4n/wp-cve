<div {{#if blockCustomID}}id="{{{blockCustomID}}}"{{else}}id="sktbuilder-block-progress-block-{{id}}"{{/if}} class="{{#if blockCustomClass}}{{{blockCustomClass}}} {{/if}}sktbuilder-block sktbuilder-block-progress" style="background-color: {{bgColor}};">
        <div class="qb-container">
            <div class="sktbuilder-header sktbuilder-block-progress__header">
            {{#if header}}
                <h2 class="sktbuilder-header__title sktbuilder-header__title_color_white">{{header}}</h2>
            {{/if}}
            {{#if description}}
                <div class="sktbuilder-header__description sktbuilder-header__description_color_white">
                   {{{description}}}
                </div>
            {{/if}}
            </div>
        </div>
        <div class="qb-container">
        {{#if bars.length}}
            {{#each_with_sort bars "order"}}
                <div class="sktbuilder-progress">
                    <progress max="100" value="{{progress}}"></progress>
                    <div class="sktbuilder-progress__value" data-title="{{title}}"></div>
                    <div class="sktbuilder-progress__bg" style = "background: {{progressBg}};"><div class="sktbuilder-progress__bar" style = "background: {{progressBarBg}};"></div></div>
                </div>
            {{/each_with_sort}}
        {{/if}}
        </div>
</div>
