<div {{#if blockCustomID}}id="{{{blockCustomID}}}"{{else}}id="sktbuilder-feature-two-row-block-{{id}}"{{/if}} class="{{#if blockCustomClass}}{{{blockCustomClass}}} {{/if}}skt-builder-block-wrapper sktbuilder-feature sktbuilder-feature_two-row sktbuilder-feature_two-row-{{id}}" style="background-color: {{blockBackgroundColor}}; background-image: url({{blockBgImageUrl}}); padding-bottom: {{blockPaddingBottom}}px; padding-top: {{blockPaddingTop}}px; {{#if blockParallaxEffect}}background-attachment: fixed;{{/if}}">
	<div class="skt-builder-block-inner skt-builder-block-inner-{{id}}" style="{{#if blockAnimation}}visibility: hidden;{{/if}}">
        <div class="skt-builder-container">
            {{#if blockTitle}}
				<div class="skt-builder-block-title">
					<h2 style="color: {{blockTitleColor}}; text-align: {{blockTitleAlign}};">{{blockTitle}}</h2>
				</div>
			{{/if}}
			{{#if blockDescription}}
                <div class="skt-builder-block-description">{{{blockDescription}}}</div>
            {{/if}}
        </div>
        <div class="qb-container">
            {{#if featureRow.length}}
                    {{#each_with_sort featureRow "order"}}
                    <div class="qb-row">
                     {{#if items.length}}
                        {{#each_with_sort items "order"}}
                            {{#ifCond ../typeRow '==' '4'}}
                            <div class="qb-column qb-1-4 qb-mobile-1-1 {{#ifIsNthItem nth=4 }} qb-column-margin-none {{/ifIsNthItem}}">
                            {{/ifCond}}
                            {{#ifCond ../typeRow '==' '3'}}
                            <div class="qb-column qb-1-3 qb-mobile-1-1 {{#ifIsNthItem nth=3 }} qb-column-margin-none {{/ifIsNthItem}}">
                            {{/ifCond}}
                                <div class="sktbuilder-feature sktbuilder-feature-{{id}}">
                                	<style>
										.sktbuilder-feature-{{id}} .sktbuilder-feature__description p{color: {{descriptionItemColor}};}
										.sktbuilder-feature-{{id}} .sktbuilder-feature__headertext:hover,
										.sktbuilder-feature-{{id}} .sktbuilder-feature__headertext a:hover{color: {{columnLinkHoverTextColor}} !important;}
									</style>
                                    <div class="sktbuilder-feature__item" style="background-color: {{boxBgColor}};">
                                        {{#if columnImage}}
                                        	<div class="sktbuilder-feature__icon sktbuilder-feature__icon_{{figureForm}}" style="background-color: {{figureBgColor}}"><img src="{{columnImage}}"></div>
                                        {{else}}
                                            <div class="sktbuilder-feature__icon sktbuilder-feature__icon_{{figureForm}}" style="background-color: {{figureBgColor}}"><span class="sktbuilder-feature__iconel {{iconFront}}" style="color: {{figureColor}}"></span></div>
                                        {{/if}}
                                        {{#if title}}
                                            <div class="sktbuilder-feature__itemheader"><h4 class="sktbuilder-feature__headertext" style="color: {{titleColor}};"><a href="{{columnLink}}" style="color: {{titleColor}};" {{#if columnLinkTarget}}target="_blank"{{/if}}>{{title}}</a></h4></div>
                                        {{/if}}
                                        {{#if descriptionItem}}
                                            <div class="sktbuilder-feature__description" style="color: {{descriptionItemColor}};">{{{descriptionItem}}}</div>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                            {{#ifCond ../typeRow '==' '4'}}
                                {{#ifIsNthItem nth=4}} <div class="clearfix"></div>{{/ifIsNthItem}}
                            {{/ifCond}}
                            {{#ifCond ../typeRow '==' '3'}}
                                {{#ifIsNthItem nth=3}} <div class="clearfix"></div>{{/ifIsNthItem}}
                            {{/ifCond}}
                        {{/each_with_sort}}
                    {{/if}}
                    </div>
                    <div class="clearfix"></div>
                {{/each_with_sort}}
            {{/if}}
        </div>
	</div>
</div>
{{#if blockAnimation}}
<script>
jQuery.noConflict();
jQuery(document).ready(function(){
jQuery(window).scroll(function(){
    // This is then function used to detect if the element is scrolled into view
    function elementScrolled(elem)
    {
        var docViewTop = jQuery(window).scrollTop();
        var docViewBottom = docViewTop + jQuery(window).height();
        var elemTop = jQuery(elem).offset().top;
        return ((elemTop <= docViewBottom) && (elemTop >= docViewTop));
    }

	if (jQuery('.skt-builder-block-inner-{{id}}').length > 0) {
	if(elementScrolled('.skt-builder-block-inner-{{id}}')) {
        var els = jQuery('.skt-builder-block-inner-{{id}}'),
            i = 0,
            f = function () {
                jQuery(els[i++]).addClass('{{blockAnimationEffect}}');
                if(i < els.length) setTimeout(f, 400);
            };
        f();
    }}

});
});
</script>
{{/if}}